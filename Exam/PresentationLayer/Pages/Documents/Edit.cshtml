@page
@model PresentationLayer.Pages.Documents.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Document</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Document.EntryNumber" />
            <div class="form-group">
                <label asp-for="Document.Title" class="control-label"></label>
                <input asp-for="Document.Title" class="form-control" />
                <span asp-validation-for="Document.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.SenderId" class="control-label"></label>
                <select asp-for="Document.SenderId" class="form-control" asp-items="ViewBag.SenderId"></select>
                <span asp-validation-for="Document.SenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.ReceiverId" class="control-label"></label>
                <select asp-for="Document.ReceiverId" class="form-control" asp-items="ViewBag.ReceiverId"></select>
                <span asp-validation-for="Document.ReceiverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.DateSigned" class="control-label"></label>
                <input asp-for="Document.DateSigned" class="form-control" />
                <span asp-validation-for="Document.DateSigned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.DateReceived" class="control-label"></label>
                <input asp-for="Document.DateReceived" class="form-control" />
                <span asp-validation-for="Document.DateReceived" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.Type" class="control-label"></label>
                <select asp-for="Document.Type" class="form-control"></select>
                <span asp-validation-for="Document.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
